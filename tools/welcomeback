#!/bin/bash
# Welcome back prompt for agent session startup
# Usage: ./tools/welcomeback [--verbose]
#
# This tool provides a friendly prompt to start an agent session.
# It triggers the agent to restore context from system reminders
# and propose next steps.

set -e

# Source log helper for telemetry
SCRIPT_DIR="${SCRIPT_DIR:-$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)}"
if [[ -f "$SCRIPT_DIR/_log-helper" ]]; then
    source "$SCRIPT_DIR/_log-helper"
fi
RUN_ID=$(log_start "welcomeback" "agency-tool" "$@" 2>/dev/null) || true

# Tool version
TOOL_VERSION="1.0.0-20260114-000001"

# Defaults
VERBOSE=false

# Parse arguments
for arg in "$@"; do
    case $arg in
        --version|-v)
            echo "welcomeback $TOOL_VERSION"
            exit 0
            ;;
        --help|-h)
            echo "welcomeback - Start an agent session"
            echo ""
            echo "Usage:"
            echo "  ./tools/welcomeback [--verbose]"
            echo ""
            echo "Options:"
            echo "  --verbose     Show detailed logging"
            echo "  --version, -v Show tool version"
            echo "  --help, -h    Show this help"
            exit 0
            ;;
        --verbose)
            VERBOSE=true
            ;;
    esac
done

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Logging functions (quiet by default)
log_info() { [[ "$VERBOSE" == "true" ]] && echo -e "${GREEN}[INFO]${NC} $1" || true; }
log_warn() { [[ "$VERBOSE" == "true" ]] && echo -e "${YELLOW}[WARN]${NC} $1" || true; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }  # Always show errors
log_step() { [[ "$VERBOSE" == "true" ]] && echo -e "${BLUE}[STEP]${NC} $1" || true; }
verbose_echo() { [[ "$VERBOSE" == "true" ]] && echo "$@" || true; }

# Main function
main() {
    # Trap unexpected exits
    trap 'log_end "$RUN_ID" "failure" $? 0 "Unexpected exit" 2>/dev/null || true' EXIT

    echo "welcomeback [run: ${RUN_ID:-none}]"

    log_info "Starting agent session"
    echo "It's time to get down to business..."

    trap - EXIT  # Clear trap
    log_end "$RUN_ID" "success" 0 0 "Session started" 2>/dev/null || true
}

main
