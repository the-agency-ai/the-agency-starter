#!/bin/bash
#
# agency-update - DEPRECATED: Use project-update instead
#
# This tool has been deprecated and replaced by project-update.
#

# Colors
RED='\033[0;31m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Tool version
TOOL_VERSION="2.0.0-deprecated"

# Handle --version
if [[ "${1:-}" == "--version" || "${1:-}" == "-v" ]]; then
    echo "agency-update $TOOL_VERSION (deprecated)"
    exit 0
fi

# Handle --help
if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
    echo "agency-update - DEPRECATED"
    echo ""
    echo "This tool has been replaced by project-update."
    echo ""
    echo "Use instead:"
    echo "  ./tools/project-update --check    # Check for updates"
    echo "  ./tools/project-update --preview  # Preview changes"
    echo "  ./tools/project-update --apply    # Apply updates"
    echo "  ./tools/project-update --status   # Show version status"
    exit 0
fi

# Show deprecation notice and exit
echo ""
echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${RED}  DEPRECATED: agency-update has been removed${NC}"
echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""
echo "  This tool has been replaced by project-update."
echo ""
echo "  Please use instead:"
echo -e "    ${BLUE}./tools/project-update --check${NC}    # Check for updates"
echo -e "    ${BLUE}./tools/project-update --preview${NC}  # Preview changes"
echo -e "    ${BLUE}./tools/project-update --apply${NC}    # Apply updates"
echo -e "    ${BLUE}./tools/project-update --status${NC}   # Show version status"
echo ""
exit 1
