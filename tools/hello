#!/bin/bash
# Welcome back prompt for agent session startup
# Usage: ./tools/welcomeback
#
# This tool provides a friendly prompt to start an agent session.
# It triggers the agent to restore context from system reminders
# and propose next steps.


# Tool version

# Source log helper for telemetry
SCRIPT_DIR="${SCRIPT_DIR:-$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)}"
if [[ -f "$SCRIPT_DIR/_log-helper" ]]; then
    source "$SCRIPT_DIR/_log-helper"
fi
RUN_ID=$(log_start "hello" "agency-tool" "$@" 2>/dev/null) || true
TOOL_VERSION="1.0.0-20260109-000001"

# Version check
if [[ "${1:-}" == "--version" || "${1:-}" == "-v" ]]; then
    echo "hello $TOOL_VERSION"
    exit 0
fi

echo "It's time to get down to business..."
