#!/bin/bash
#
# dependencies-install - Install all Agency dependencies
#
# Usage:
#   dependencies-install              # Install all dependencies
#   dependencies-install --verbose    # Show detailed output
#

set -euo pipefail

# Source log helper for telemetry
SCRIPT_DIR="${SCRIPT_DIR:-$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)}"
if [[ -f "$SCRIPT_DIR/_log-helper" ]]; then
    source "$SCRIPT_DIR/_log-helper"
fi

# Tool version
TOOL_VERSION="1.0.0-20260118-000001"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Defaults
VERBOSE=false
PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
DEPS_FILE="$PROJECT_ROOT/claude/config/agency-dependencies.yaml"

# Logging functions
log_info() { [[ "$VERBOSE" == "true" ]] && echo -e "${GREEN}[INFO]${NC} $1" || true; }
log_warn() { echo -e "${YELLOW}[WARN]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }
log_step() { echo -e "${BLUE}[STEP]${NC} $1"; }
verbose_echo() { [[ "$VERBOSE" == "true" ]] && echo "$@" || true; }

usage() {
    cat << EOF
Usage: dependencies-install [options]

Install all Agency dependencies.

Options:
  --verbose        Show detailed output
  -v, --version    Show version
  -h, --help       Show this help

Examples:
  dependencies-install              # Install all
  dependencies-install --verbose    # Detailed output
EOF
}

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --verbose)
            VERBOSE=true
            shift
            ;;
        -v|--version)
            echo "dependencies-install $TOOL_VERSION"
            exit 0
            ;;
        -h|--help)
            usage
            exit 0
            ;;
        *)
            log_error "Unknown option: $1"
            usage
            exit 1
            ;;
    esac
done

# Detect platform
detect_platform() {
    if [[ "$(uname)" == "Darwin" ]]; then
        echo "darwin"
    else
        echo "linux"
    fi
}

# Install yq first (needed to parse other deps)
install_yq() {
    if command -v yq &> /dev/null; then
        verbose_echo "  yq already installed"
        return 0
    fi

    log_step "Installing yq (required to parse dependencies)..."
    local platform=$(detect_platform)

    if [[ "$platform" == "darwin" ]]; then
        if command -v brew &> /dev/null; then
            brew install yq
        else
            log_error "Homebrew required on macOS. Install from https://brew.sh"
            return 1
        fi
    else
        sudo wget -qO /usr/local/bin/yq https://github.com/mikefarah/yq/releases/latest/download/yq_linux_amd64
        sudo chmod +x /usr/local/bin/yq
    fi
}

# Install a single dependency
install_dep() {
    local name="$1"
    local check_cmd="$2"
    local install_cmd="$3"

    if eval "$check_cmd" &> /dev/null; then
        verbose_echo "  $name: already installed"
        return 0
    fi

    echo -e "  Installing $name..."
    if eval "$install_cmd"; then
        echo -e "  ${GREEN}✓${NC} $name installed"
        return 0
    else
        echo -e "  ${RED}✗${NC} Failed to install $name"
        return 1
    fi
}

main() {
    RUN_ID=$(log_start "dependencies-install" "agency-tool" "$@" 2>/dev/null) || true
    echo "dependencies-install [run: ${RUN_ID:-none}]"

    local platform=$(detect_platform)
    local failed=0
    local installed=0

    echo ""
    echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${BLUE}  Installing Agency Dependencies${NC}"
    echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    echo "Platform: $platform"
    echo ""

    # Install yq first (bootstrap dependency)
    if ! install_yq; then
        log_error "Failed to install yq. Cannot continue."
        exit 1
    fi

    # Check if dependencies file exists
    if [[ ! -f "$DEPS_FILE" ]]; then
        log_error "Dependencies file not found: $DEPS_FILE"
        exit 1
    fi

    # Get number of dependencies
    local total=$(yq '.dependencies | length' "$DEPS_FILE")
    log_step "Installing $total dependencies..."
    echo ""

    # Install each dependency
    for i in $(seq 0 $((total - 1))); do
        local name=$(yq ".dependencies[$i].name" "$DEPS_FILE")
        local check_cmd=$(yq ".dependencies[$i].check" "$DEPS_FILE")
        local install_cmd=$(yq ".dependencies[$i].install.$platform // .dependencies[$i].install.all // \"\"" "$DEPS_FILE")

        if [[ -z "$install_cmd" ]]; then
            verbose_echo "  $name: no install command for $platform"
            continue
        fi

        if install_dep "$name" "$check_cmd" "$install_cmd"; then
            ((installed++))
        else
            ((failed++))
        fi
    done

    echo ""
    if [[ $failed -eq 0 ]]; then
        echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
        echo -e "${GREEN}  All dependencies installed!${NC}"
        echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
        log_end "$RUN_ID" "success" 0 0 "All dependencies installed" 2>/dev/null || true
        exit 0
    else
        echo -e "${YELLOW}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
        echo -e "${YELLOW}  $failed dependencies failed to install${NC}"
        echo -e "${YELLOW}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
        echo ""
        echo "Some dependencies may need manual installation."
        echo "Run ./tools/dependencies-check --verbose for details."
        log_end "$RUN_ID" "failure" 1 0 "$failed dependencies failed" 2>/dev/null || true
        exit 1
    fi
}

main "$@"
