{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/tools/session-backup"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-messages.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/tools/tab-status working 2>/dev/null || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/tools/tab-status working 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/tools/log-tool-use 2>/dev/null || true"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/tools/tab-status attention 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/tools/tab-status available 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(./tools/agency-bench*)",
      "Bash(./tools/agentname*)",
      "Bash(./tools/bench*)",
      "Bash(./tools/browser*)",
      "Bash(./tools/code-review*)",
      "Bash(./tools/compare-starter*)",
      "Bash(./tools/commit-prefix*)",
      "Bash(./tools/config*)",
      "Bash(./tools/context-review*)",
      "Bash(./tools/context-save*)",
      "Bash(./tools/docbench*)",
      "Bash(./tools/find-tool*)",
      "Bash(./tools/hello*)",
      "Bash(./tools/hi*)",
      "Bash(./tools/list-artifacts*)",
      "Bash(./tools/list-instructions*)",
      "Bash(./tools/log *)",
      "Bash(./tools/now*)",
      "Bash(./tools/observe*)",
      "Bash(./tools/pre-commit-check*)",
      "Bash(./tools/principal*)",
      "Bash(./tools/read-messages*)",
      "Bash(./tools/requests*)",
      "Bash(./tools/run-unit-tests*)",
      "Bash(./tools/show-instructions*)",
      "Bash(./tools/tab-status*)",
      "Bash(./tools/verify-starter*)",
      "Bash(./tools/welcomeback*)",
      "Bash(./tools/whoami*)",
      "Bash(./tools/workstream*)",
      "Bash(./tools/archive-session*)",
      "Bash(./tools/backup-session*)",
      "Bash(./tools/bump-version*)",
      "Bash(./tools/capture-artifact*)",
      "Bash(./tools/capture-instruction*)",
      "Bash(./tools/capture-proposal*)",
      "Bash(./tools/collaborate*)",
      "Bash(./tools/collaboration-respond*)",
      "Bash(./tools/complete-instruction*)",
      "Bash(./tools/dispatch-collaborations*)",
      "Bash(./tools/log-adhoc*)",
      "Bash(./tools/news-post*)",
      "Bash(./tools/news-read*)",
      "Bash(./tools/nit-add*)",
      "Bash(./tools/nit-resolve*)",
      "Bash(./tools/request*)",
      "Bash(./tools/restore*)",
      "Bash(./tools/send-message*)",
      "Bash(./tools/update-artifact-index*)",
      "Bash(./tools/update-instruction-index*)"
    ]
  }
}
